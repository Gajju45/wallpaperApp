<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/beautiful"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagwiewItem"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/photoGrapherName"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/ic_baseline_camera_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Photographer Name"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="10sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>